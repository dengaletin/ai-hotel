{
    "name": "aihotel/ai-client",
    "description": "Unified PHP client for AI services (OpenAI GPT, Claude, and more)",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/dengaletin/ai-hotel",
    "keywords": [
        "ai",
        "openai",
        "gpt",
        "claude",
        "chat",
        "api",
        "client",
        "artificial-intelligence",
        "php"
    ],
    "authors": [
        {
            "name": "Denis Galetin",
            "email": "galetindenis@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/dengaletin/ai-hotel/issues",
        "source": "https://github.com/dengaletin/ai-hotel"
    },
    "require": {
        "php": ">=8.4",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "AiHotel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AiHotel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test-coverage": "phpunit --coverage-html build/coverage"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
